<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context="com.oa.wanyu.activity.login.LoginActivity">

    <RelativeLayout
        android:id="@+id/q"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp">

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/color_3dacfe"
            android:textSize="16sp" />

        <View
            android:layout_width="97dp"
            android:layout_height="1dp"
            android:layout_below="@+id/login_btn"
            android:layout_marginTop="15dp"
            android:background="@color/color_3dacfe" />

        <TextView
            android:id="@+id/register_btn"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/login_btn"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/color_b9b9b9"
            android:textSize="16sp" />

        <View
            android:layout_width="97dp"
            android:layout_height="1dp"
            android:layout_below="@+id/register_btn"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/login_btn"
            android:background="@color/color_b9b9b9" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_333333"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/edit_password"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="请输入密码"
        android:inputType="text"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_333333"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/login_or_register_btn"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/blue_circle_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_or_register_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:padding="5dp"
        android:text="忘记密码"
        android:textColor="@color/color_b9b9b9"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        android:src="@mipmap/login_bg2" />
</RelativeLayout>
