<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_no_lease"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context="com.oa.wanyu.activity.leaseManage.NoLeaseActivity">

    <RelativeLayout
        android:id="@+id/bx_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@mipmap/back_img" />

        <TextView
            android:id="@+id/sq_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="商铺名称"
            android:textColor="@color/color_232323"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sure_lease_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_3dacfe"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/linel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bx_rl"
        android:background="@color/color_ededed" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linel"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="位置："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/location_tv_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/floor_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="类型："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/floor_type_tv_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/floor_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="楼层："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/floor_num_tv_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/area_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="面积："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/area_tv_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="状态："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/status_tv_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="姓名："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/name_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:background="@null"
                            android:hint=""
                            android:inputType="text"
                            android:maxLength="20"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="电话："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/phone_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/phone_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:background="@null"
                            android:hint=""
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="单价："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/price_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/price_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_toLeftOf="@+id/danwei"
                            android:background="@null"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="元/天/平米"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_all_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="租金："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/price_all_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/money_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_toLeftOf="@+id/danwei_w"
                            android:background="@null"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:maxLength="15"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/danwei_w"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="元"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_ya_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="押金："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/money_ya_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/ya_money_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_toLeftOf="@+id/danwei_y"
                            android:background="@null"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/danwei_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="元"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="起租日期："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/start_time_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/start_time_mess"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_toLeftOf="@+id/start_time_img"
                            android:background="@null"
                            android:enabled="false"
                            android:hint=""
                            android:inputType="text"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/start_time_img"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@mipmap/sanjiao"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="截止日期："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@id/end_time_tv"
                        android:background="@drawable/lease_bg">

                        <EditText
                            android:id="@+id/end_time_mess"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_toLeftOf="@+id/end_time_img"
                            android:background="@null"
                            android:enabled="false"
                            android:hint=""
                            android:inputType="text"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/end_time_img"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@mipmap/sanjiao"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contract_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linel"
                        android:text="纸质合同："
                        android:textColor="@color/color_b9b9b9"
                        android:textSize="12sp" />

                    <GridView
                        android:id="@+id/lease_gridview_id"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:numColumns="3"
                        android:scrollbars="none">

                    </GridView>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/big_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
