<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/one_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <com.oa.wanyu.myutils.CircleImg
            android:id="@+id/contacts_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/head_img_icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/contacts_head">

            <TextView
                android:id="@+id/contacts_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="15"
                android:text="Mr.Li"
                android:textColor="@color/color_090a0f"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/contacts_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contacts_name"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="部门：软件部       职位：部门经理"
                android:textColor="@color/color_b9b9b9"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/call_phone_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/one_rl"
        android:background="@color/color_f9f9f9">

        <TextView
            android:id="@+id/telephone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/call_phone_id"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="电话：18335277251"
            android:textColor="@color/color_cbcbcb"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/call_phone_id"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            android:background="@drawable/call_phone_bg"
            android:gravity="center"
            android:text="@string/call_phone"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />


    </RelativeLayout>

</RelativeLayout>