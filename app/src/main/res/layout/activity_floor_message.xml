<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_floor_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context="com.oa.wanyu.activity.floorManage.FloorMessageActivity">

    <RelativeLayout
        android:id="@+id/bx_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@mipmap/back_img" />

        <TextView
            android:id="@+id/sq_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/back_img"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="翡翠华府-1号楼-3单元"
            android:textColor="@color/color_232323"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/linel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bx_rl"
        android:background="@color/color_ededed" />

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linel"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="6dp">

        <View
            android:id="@+id/ke_s"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="#b9b9b9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="可售"
            android:textColor="@color/color_b9b9b9"
            android:textSize="12sp" />

        <View

            android:id="@+id/yi_s"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:background="#8cc251" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="已售"
            android:textColor="@color/color_b9b9b9"
            android:textSize="12sp" />


        <View
            android:id="@+id/bu_s"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:background="#ff9701" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="不可售"
            android:textColor="@color/color_b9b9b9"
            android:textSize="12sp" />
    </LinearLayout>

    <!--<com.scwang.smartrefresh.layout.SmartRefreshLayout-->
        <!--android:id="@+id/floor_refresh_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/a"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:layout_marginTop="15dp"-->

        <!--&gt;-->


        <GridView
            android:layout_below="@id/a"
            android:id="@+id/floor_gridview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@color/color_ffffff"
            android:horizontalSpacing="1dp"
            android:numColumns="5"
            android:verticalSpacing="1dp">

        </GridView>


    <!--</com.scwang.smartrefresh.layout.SmartRefreshLayout>-->

    <ListView
        android:divider="@null"
        android:dividerHeight="1dp"
        android:id="@+id/floor_listview"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_below="@id/a"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_ffffff"
        android:scrollbars="none">

    </ListView>
</RelativeLayout>
